<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        tools:context=".activity.AddBillActivity">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_customer_info"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="客户信息："
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_customer_name"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="客户姓名："
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_customer_info" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/ed_customer_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_customer_name"
            app:layout_constraintTop_toTopOf="@id/tv_customer_name" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_customer_tel"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="客户电话："
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_customer_name" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/ed_customer_tel"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:hint="138xxxxxxxx"
            android:textColorHint="@android:color/darker_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_customer_tel"
            app:layout_constraintTop_toTopOf="@id/tv_customer_tel" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_customer_time"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="交易时间："
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ed_customer_tel" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/ed_customer_time_year"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:hint="年"
            android:textColorHint="@android:color/darker_gray"
            app:layout_constraintEnd_toStartOf="@id/ed_customer_time_month"
            app:layout_constraintHorizontal_weight="1.5"
            app:layout_constraintStart_toEndOf="@id/tv_customer_time"
            app:layout_constraintTop_toTopOf="@id/tv_customer_time" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/ed_customer_time_month"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:hint="月"
            android:textColorHint="@android:color/darker_gray"
            app:layout_constraintEnd_toStartOf="@id/ed_customer_time_day"
            app:layout_constraintHorizontal_weight="1.5"
            app:layout_constraintStart_toEndOf="@id/ed_customer_time_year"
            app:layout_constraintTop_toTopOf="@id/tv_customer_time" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/ed_customer_time_day"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:hint="日"
            android:textColorHint="@android:color/darker_gray"
            app:layout_constraintEnd_toStartOf="@id/ed_customer_time_morning"
            app:layout_constraintHorizontal_weight="1.5"
            app:layout_constraintStart_toEndOf="@id/ed_customer_time_month"
            app:layout_constraintTop_toTopOf="@id/tv_customer_time" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/ed_customer_time_morning"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="#10000000"
            android:gravity="center"
            android:hint="上午"
            android:textColorHint="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="@id/tv_customer_time"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@id/ed_customer_time_day"
            app:layout_constraintTop_toTopOf="@id/tv_customer_time" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_customer_good_detail"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="货物详情："
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_customer_time" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_customer_good_species"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="货物品种："
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_customer_good_detail" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>